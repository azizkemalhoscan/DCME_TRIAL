<% require "time"
%>

<% if @surveys.any? %>

  <div class="row">
  	<h1 class="p-3  underline">My Surveys</h1>
  </div>

  <div class="row align-items-center border-bottom justify-content-center pt-4 pb-2 text-center">
  	<div class="col-md-1">
      	<span><strong>Bookmark</strong></span>
      </div>
      <div class="col-md-2">
      	<span><strong>Survey Name</strong></span>
      </div>
      <div class="col-md-2">
          <span><strong>Project</strong></span>
      </div>
      <div class="col-md-1">
      	<span><strong>Questions</strong></span>
      </div>
      <div class="col-md-1">
        <span><strong>Participants</strong></span>
      </div>
      <div class="col-md-1">
        <span><strong>Created</strong></span>
      </div>
      <div class="col-md-1">
  	  <span><strong>Edit</strong></span>
  	</div>
      <div class="col-md-1">
      	<span><strong>Delete</strong></span>
      </div>
  </div>

  <% @surveys.reverse.each do |survey| %>
  	<% time_diff = Time.now - survey.created_at %>
  	<% time_diff_days = (time_diff.fdiv(43200)).floor %>

  	<div class="row align-items-center border-bottom justify-content-center py-5 text-center hoverable">
  	<div class="col-md-1">
      	<a href="#" ><i class="far fas fa-star m-2"></i></a>
      </div>
      <div class="col-md-2">
      	<%= link_to "#{survey.name}", survey_path(survey) %>
      	<% if survey.completed %>
          	<i class="far fa-check-circle" style="color: green"></i>
          <% end %>
      </div>
      <div class="col-md-2">
          <%= link_to "#{survey.project.name}", project_path(survey.project) %>
      </div>
      <div class="col-md-1">
      	<a href="#"><i class="far fas fa-question-circle"></i></a>
  		<%= survey.survey_questions.count %>
      </div>
      <div class="col-md-1">
      	<a href="#"><i class="fas fa-users"></i></a>
       	<%= survey.participants.count %>
      </div>
      <div class="col-md-1">
        <%= time_diff_days.to_s + "Day(s) Ago" if time_diff_days != 0 %>
  	  <%= "Today" if time_diff_days == 0 %>
      </div>
      <div class="col-md-1">
  	  <a href="#"><i class="fas fa-edit"></i></a>
  	</div>
      <div class="col-md-1">
      	<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, survey_path(survey), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
  </div>
  <% end %>

  <% else %>

  <div class="row">
    <h1 class="p-3 underline">My Surveys</h1>
  </div>

  <div class="row align-items-center justify-content-left pl-4 pt-4 pb-2 text-center">
    <p style="font-style: italic; opacity: 0.5">There are currently no surveys to be displayed</p>
  </div>



<% end %>
