<div style="width:45%">
  <span class="d-inline-flex">
    <h1><%= @survey.name %></h1>
    <button class="button" id="bt-popup">Preview Survey</button>
  </span>
  <hr style="border-bottom: 4px solid #FCCD08">
  <%= link_to "Survey answers", survey_question_answers_path(@survey), class:"button", id:"bt-popup" %>
  <%= link_to "Survey participants", participants_path(survey_id: @survey.id), class:"button", id:"bt-popup" %>
</div>

<br>

<%#= simple_form_for([@survey, WelcomeMessage.new]) do |f| %>
  <%#= f.input :title %>
  <%#= f.button :submit, class: "button"  %>
<%# end %>

<%= render 'survey_questions/new_question', survey: @survey, question: @survey_question %>

<ol id="questions">
  <% @survey.survey_questions.each do |question| %>
    <%= render 'survey_questions/add_question', survey: @survey, question: question %>
    <% end %>
</ol>
</div>

<%#= simple_form_for([@survey, ThankyouScreen.new]) do |f| %>
  <%#= f.input :title %>
  <%#= f.button :submit, class: "button"  %>
<%# end %>

<%= link_to "Back", project_path(@survey.project.id), class: "btn-info"%>







<script src="https://embed.typeform.com/embed.js" type="text/javascript"></script>
<script type="text/javascript">
  let popup1;
  window.addEventListener('DOMContentLoaded', function () {

      popup1 = window.typeformEmbed.makePopup("https://admin.typeform.com/to/<%= @survey.typeform_id  %>", {
        hideHeaders: true,
        hideFooter: true
      });
    })

    document.getElementById('bt-popup').addEventListener('click', function () {
      popup1.open();
    });
</script>

